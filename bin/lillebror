import sys

from skal import SkalApp

from lillebror.version import __version__


if __name__ == '__main__':
    # TODO: remove quickfix for default command
    sys.argv.append('server')

    SkalApp(
        description="""Run lillebror in server mode""",
        version=__version__,
        args={
            ('-c', '--config-file'): {
                'help': 'Path to configuration in json format',
                'default': None}
        },
        command_modules=['lillebror.cli']
    ).run()
